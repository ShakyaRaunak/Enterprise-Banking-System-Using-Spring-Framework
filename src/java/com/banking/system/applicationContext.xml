<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.com/dtd/spring-beans-2.0.dtd">

<beans>
    <bean id="ds" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.postgresql.Driver"/>
        <property name="url" value="jdbc:postgresql://localhost:5432/BankingSystemDB"/>
        <property name="username" value="postgres"/>
        <property name="password" value="niitktm"/>
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="ds"/>
    </bean>
    
    <bean id="cdao" class="com.bsp.bankingsystemproject.CustomerDao">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <bean id="edao" class="com.bsp.bankingsystemproject.EmployeeDao">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>
            
    <bean id="csdao" class="com.bsp.bankingsystemproject.CustomerStreetDao">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>
    
    <bean id="cadao" class="com.bsp.bankingsystemproject.CustomerAddressDao">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>
</beans>
